{{>header}}
{{email}}
<div id="passwordRecovery_1-form" class="login" style="border:solid gray 1px;; margin:auto; margin-top:10%; text-align:center;">
  <div  style="margin:20px 20px 20px 20px;">
    <form  action="/users/changePassword" method="post">
      <div class="form-group">
        <p style="height:3em; background-color: #f6f8fa;" class="form-control" id="email">{{email}}</p>
      </div>
      <div class="form-group">
        <input style="height:3em; background-color: #f6f8fa; " type="password" class="form-control" id="inputPassword" name="password" placeholder="Password" required >
      </div>
      <div class="form-group">
        <input style="height:3em; background-color: #f6f8fa; " type="password" class="form-control" id="inputConfirmPassword" name="confirmationPassword" placeholder="Confirm Password" required>
      </div>
      <div class="form-group" style="padding-bottom:10px;">
        <button type="submit" class="button btn btn-lg">CHANGE PASSWORD</button>
      </div>
    </form>
  </div>
</div>
