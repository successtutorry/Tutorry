<!-- message overlay which appears when the message button is clicked---->
<div id="message-overlay">
  <div class="login" style=" background-color:white; border-radius:10px; margin:auto; margin-top:10%;">
	   <button style="float:right;" type="button"> X </button>
     <div style="padding:40px 20px 20px 20px;">
		     <form id="message-form" action="/users/message" method="post">
			        <div class="row">
				          <div class="form-group col-sm-6">
					            <input style="height:3em; background-color: #f6f8fa; " type="text" class="form-control" id="name" name="name" placeholder="Name" required>
				          </div>
          				<div class="form-group col-sm-6">
          					<input style="height:3em; background-color: #f6f8fa; " type="email" class="form-control" id="email" name="email" placeholder="Email" required>
          				</div>
			        </div>
        			<div class="row">
                <div class="form-group col-sm-6">
        					<input style="height:3em; background-color: #f6f8fa; " type="text" class="form-control" id="phone" name="phone" placeholder="Contact No" required>
        				</div>
        				<div class="form-group col-sm-6">
        					<input style="height:3em; background-color: #f6f8fa; " type="text" class="form-control" id="subject" name="subject" placeholder="Subject" required>
        				</div>
        			</div>
        			<div class="form-group">
        				<textarea style="height:10em; background-color: #f6f8fa;" class="form-control" id="pwd" name:"message" placeholder="Message" required></textarea>
        			</div>
        			<div class="form-group">
        				<button type="submit" class="button btn btn-lg">SEND</button>
        			</div>
		       </form>
    	</div>
    </div>
</div>
