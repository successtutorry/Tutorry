<style>
/* The close button */
.closebtn {
  margin-left: 15px;
  color: white;
  font-weight: bold;
  float: right;
  font-size: 22px;
  line-height: 20px;
  cursor: pointer;
  transition: 0.3s;
}

/* When moving the mouse over the close button */
.closebtn:hover {
  color: black;
}

.alert_success{
padding: 10px 15px 10px 15px;
border:1px solid transparent;
opacity: 1;
transition: opacity 0.6s;
background-color:#aece61;
color:white;
}

.alert_danger{
  padding: 10px 15px 10px 15px;
  border:1px solid transparent;
  background-color:rgb(237, 28, 223);
  border-radius:4px;
}
</style>
{{#if success_messages }}
      <div class="alert_success">{{success_messages}}
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
      </div>
{{/if}}

{{#if error_messages }}
      <div class="alert_danger">{{error_messages}}</div>
{{/if}}
