{{>header}}
<form id="regForm" action="/action_page.php">
		<h1 class="registerheader">Profile Details</h1>
		<!-- One "tab" for each step in the form: -->
		<div class="tab">
			<h3 style="color:#134477">Personal info:</h3>
			<p><input placeholder="First name..." oninput="this.className = ''" name="fname"></p>
			<p><input placeholder="Last name..." oninput="this.className = ''" name="lname"></p>
			<p><input type="date" oninput="this.className = ''" name="dd"></p>
			<p><input type="number" placeholder="Age..." oninput="this.className = ''" name="fname"></p>
			<p><select style="height:45px;" class="form-control">
        <option>Male</option>
        <option>Female</option>
        <option>Other</option>
      </select></p>
		</div>
		<div class="tab">
			<h3 style="color:#134477">Contact info:</h3>
			<p><input type="text" placeholder="Address..." oninput="this.className = ''" name="lname"></p>
			<p><input type="number" placeholder="Zipcode" oninput ="this.className=''" name=''></p>
			<p><select style="height:45px;" class="form-control">
        <option>City</option>
        <option>Mumbai</option>
        <option>Pune</option>
      </select></p>
			<p><select style="height:45px;" class="form-control">
        <option>State</option>
        <option>Maharashtra</option>
        <option>Tamil Nadu</option>
      </select></p>
			<p><input placeholder="E-mail..." oninput="this.className = ''" name="email"></p>
			<p><input placeholder="Phone..." oninput="this.className = ''" name="phone"></p>
		</div>
		<div class="tab">Educational Info:
			<p><input placeholder="dd" oninput="this.className = ''" name="dd"></p>
			<p><input placeholder="mm" oninput="this.className = ''" name="nn"></p>
			<p><input placeholder="yyyy" oninput="this.className = ''" name="yyyy"></p>
		</div>
		<div class="tab">Login Info:
			<p><input placeholder="Username..." oninput="this.className = ''" name="uname"></p>
			<p><input placeholder="Password..." oninput="this.className = ''" name="pword" type="password"></p>
		</div>
		<div class="tab">Login Info:
			<p><input placeholder="Username" oninput="this.className = ''" name="uname"></p>
			<p><input placeholder="Password" oninput="this.className = ''" name="pword" type="password"></p>
		</div>
		<div style="overflow:auto;">
			<div style="float:right;">
				<button class="tut-reg-btn" type="button" id="prevBtn" onclick="nextPrev(-1)">Previous</button>
				<button class="tut-reg-btn" type="button" id="nextBtn" onclick="nextPrev(1)">Next</button>
			</div>
		</div>
		<!-- Circles which indicates the steps of the form: -->
		<div style="text-align:center;margin-top:40px;">
			<span class="step"></span>
			<span class="step"></span>
			<span class="step"></span>
			<span class="step"></span>
			<span class="step"></span>
		</div>
	</form>
